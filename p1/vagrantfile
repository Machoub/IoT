# -*- mode: ruby -*-
# vi: set ft=ruby :

env_file_path = File.join(File.dirname(__FILE__), '.env')
if File.exist?(env_file_path)
  File.read(env_file_path).each_line do |line|
    key, value = line.strip.split('=')
    ENV[key] = value
  end
end

Vagrant.configure("2") do |config|
  # Use the latest stable Debian version
  config.vm.box = "debian/bullseye64"

  config.vm.define "machoubaS" do |server|
    server.vm.hostname = "machoubaS"
    server.vm.network "private_network", ip: "192.168.56.110"
    server.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
      vb.cpus = 1
    end
    server.vm.provision "shell", inline: <<-SHELL
      apt-get update
      apt-get install -qqy curl net-tools

      echo 'export PATH=$PATH:/sbin:/usr/sbin' >> /home/vagrant/.bashrc
      source /home/vagrant/.bashrc

      curl -sfL https://get.k3s.io | INSTALL_K3S_EXEC="server --bind-address=192.168.56.110 --node-ip=192.168.56.110" K3S_TOKEN=#{ENV['K3S_TOKEN']} K3S_KUBECONFIG_MODE="644" sh -s -
    SHELL
    end

  config.vm.define "machoubaSW" do |serverworker|
    serverworker.vm.hostname = "machoubaSW"
    serverworker.vm.network "private_network", ip: "192.168.56.111"
    serverworker.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
      vb.cpus = 1
    end
    serverworker.vm.provision "shell", inline: <<-SHELL
      apt-get update
      apt-get install -qqy curl net-tools

      echo 'export PATH=$PATH:/sbin:/usr/sbin' >> /home/vagrant/.bashrc
      source /home/vagrant/.bashrc

      curl -sfL https://get.k3s.io | INSTALL_K3S_EXEC="agent --node-ip=192.168.56.111 --server https://192.168.56.110:6443" K3S_TOKEN=#{ENV['K3S_TOKEN']} K3S_KUBECONFIG_MODE="644" sh -s -
    SHELL
    end


end