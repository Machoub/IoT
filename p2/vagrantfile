env_file_path = File.join(File.dirname(__FILE__), '.env')
if File.exist?(env_file_path)
  File.read(env_file_path).each_line do |line|
    key, value = line.strip.split('=')
    ENV[key] = value
  end
end

Vagrant.configure("2") do |config|
  # Use the latest stable Debian version
  config.vm.box = "debian/bullseye64"

  config.vm.define "machoubaS" do |server|
    server.vm.hostname = "machoubaS"
    server.vm.network "private_network", ip: "192.168.56.110"
    server.vm.provider "virtualbox" do |vb|
      vb.memory = "2048"
      vb.cpus = 4
    end
    server.vm.provision "shell", inline: <<-SHELL
      apt-get update -qq
      apt-get install -qqy curl net-tools

      echo 'export PATH=$PATH:/sbin:/usr/sbin' >> /home/vagrant/.bashrc
      source /home/vagrant/.bashrc

      # Copier le dossier conf depuis le dossier partag√© Vagrant
      echo "üìÇ Copying conf directory..."
      cp -r /vagrant/conf /home/vagrant/
      chown -R vagrant:vagrant /home/vagrant/conf
      
      echo "üöÄ Installing K3s server..."
      curl -sfL https://get.k3s.io | INSTALL_K3S_EXEC="server --bind-address=192.168.56.110 --node-ip=192.168.56.110" K3S_TOKEN=#{ENV['K3S_TOKEN']} K3S_KUBECONFIG_MODE="644" sh -s -

      # Attendre que K3s soit pr√™t
      echo "‚è≥ Waiting for K3s to be ready..."
      until kubectl get nodes 2>/dev/null; do
        sleep 2
      done
      
      echo "‚úÖ K3s ready!"
      
      # Deploy the application
      if [ -f /home/vagrant/conf/deployment.yaml ]; then
        echo "üì¶ Deploying application..."
        kubectl apply -f /home/vagrant/conf/deployment.yaml
        kubectl apply -f /home/vagrant/conf/service.yaml
        kubectl apply -f /home/vagrant/conf/ingress.yaml
        echo "‚úÖ Deployment done!"
      else
        echo "‚ö†Ô∏è  Warning: deployment.yaml not found"
      fi
    SHELL
    end
end